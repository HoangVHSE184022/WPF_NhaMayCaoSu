<Window x:Class="WPF_NhaMayCaoSu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Show Information" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="#e0ffff ">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="203" Margin="42,556,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Rectangle HorizontalAlignment="Left" Height="280" Margin="42,33,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Button x:Name="ShowButton" Content="Hiển thị" HorizontalAlignment="Left" Height="49" Margin="62,66,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="26" FontWeight="UltraBold"/>
        <Button x:Name="ConfigButton" Content="Cấu hình" HorizontalAlignment="Left" Height="49" Margin="62,146,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="26" FontWeight="UltraBold" Click="ConfigButton_Click"/>
        <Rectangle HorizontalAlignment="Left" Height="202" Margin="42,333,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Button x:Name="CustomerManagementButton" HorizontalAlignment="Left" Height="70" Margin="62,351,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="CustomerManagementButton_Click" >
            <TextBlock  Text="Quản lý khách hàng" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button x:Name="AccountManagementButton" HorizontalAlignment="Left" Height="69" Margin="62,578,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="AccountManagementButton_Click">
            <TextBlock  Text="Quản lý tài khoản" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="736" Margin="280,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="883" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <DataGrid x:Name="SalesDataGrid" HorizontalAlignment="Left" Height="686" Margin="310,0,0,0" VerticalAlignment="Center" Width="824" FontFamily="Arial" FontSize="24" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Thời gian tạo" Binding="{Binding CreatedDate}" />
                <DataGridTextColumn Header="RFID" Binding="{Binding RFIDCode}"/>
                <DataGridTextColumn Header="Cân nặng" Binding="{Binding Weight}" />
                <DataGridTextColumn Header="Tỉ Trọng" Binding="{Binding Density}" />
                <DataGridTextColumn Header="Tên khách hàng" Binding="{Binding Customer.CustomerName}" />
                <DataGridTemplateColumn Header="Chỉnh sửa">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="25" Height="25">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Grid>
                                            <TextBlock Text="⚙️" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="QuitButton" Content="QUIT" HorizontalAlignment="Left" Height="68" Margin="62,667,0,0" VerticalAlignment="Top" Width="160" Background="#FF254098" FontFamily="Arial" Foreground="#FFFFFF" BorderThickness="0" FontSize="36" FontWeight="UltraBold" Click="QuitButton_Click"/>
        <Button  x:Name="SaleManagementButton" HorizontalAlignment="Left" Height="70" Margin="62,445,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="SaleManagementButton_Click" >
            <TextBlock Text="Quản lý Sale" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button  x:Name="BrokerManagementButton" HorizontalAlignment="Left" Height="70" Margin="62,215,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="BrokerManagementButton_Click">
            <TextBlock Text="Quản lý Broker" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
    </Grid>
</Window>
