<Window x:Class="WPF_NhaMayCaoSu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Show Information" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="#e0ffff ">
        <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Rectangle HorizontalAlignment="Left" Height="196" Margin="42,33,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Button x:Name="ShowButton" Content="Hiển thị" HorizontalAlignment="Left" Height="49" Margin="62,66,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="26" FontWeight="UltraBold"/>
        <Button x:Name="ConfigButton" Content="Cấu hình" HorizontalAlignment="Left" Height="49" Margin="62,146,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="26" FontWeight="UltraBold"/>
        <Rectangle HorizontalAlignment="Left" Height="295" Margin="42,283,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Button x:Name="CustomerManagementButton" HorizontalAlignment="Left" Height="69" Margin="62,302,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="CustomerManagementButton_Click" >
            <TextBlock  Text="Quản lý khách hàng" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button x:Name="RFIDManagementButton" HorizontalAlignment="Left" Height="69" Margin="62,396,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="RFIDManagementButton_Click" >
            <TextBlock  Text="Quản lý thẻ RFID" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Rectangle HorizontalAlignment="Left" Height="736" Margin="280,23,0,0" Stroke="Black" VerticalAlignment="Top" Width="883" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <DataGrid x:Name="SalesDataGrid" HorizontalAlignment="Left" Height="686" Margin="310,0,0,0" VerticalAlignment="Center" Width="824" d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="Arial" FontSize="24"/>
        <Button x:Name="QuitButton" Content="QUIT" HorizontalAlignment="Left" Height="68" Margin="62,667,0,0" VerticalAlignment="Top" Width="160" Background="#FF254098" FontFamily="Arial" Foreground="#FFFFFF" BorderThickness="0" FontSize="36" FontWeight="UltraBold" Click="QuitButton_Click"/>
        <Button  x:Name="SaleManagementButton" HorizontalAlignment="Left" Height="69" Margin="62,489,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" Click="SaleManagementButton_Click">
            <TextBlock Text="Quản lý Sale" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <StackPanel>
            <Grid Width="300" Height="25" Margin="0,0,0,10">
                <TextBox x:Name="TopicTextBox" />
                <TextBlock Text="Enter topic" Foreground="Gray" VerticalAlignment="Center" 
                           IsHitTestVisible="False" Margin="5,0,0,0" 
                           Visibility="{Binding Text.IsEmpty, ElementName=TopicTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <Grid Width="300" Height="25" Margin="0,0,0,10">
                <TextBox x:Name="PayloadTextBox" />
                <TextBlock Text="Enter payload" Foreground="Gray" VerticalAlignment="Center" 
                           IsHitTestVisible="False" Margin="5,0,0,0" 
                           Visibility="{Binding Text.IsEmpty, ElementName=PayloadTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>

            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button x:Name="SubscribeButton" Content="Subscribe" Width="100" Height="30" Click="SubscribeButton_Click"/>
                <Button x:Name="PublishButton" Content="Publish" Width="100" Height="30" Margin="10,0,0,0" Click="PublishButton_Click"/>
            </StackPanel>
            <TextBlock x:Name="StatusTextBlock" Text="Status: Waiting..." Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
