<Window x:Class="WPF_NhaMayCaoSu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Show Information" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFCACACA" FontFamily="Monserrat" Foreground="#FF002366" FontSize="24">
            <MenuItem x:Name="ShowButton" Header="Hiển thị" Click="ShowButton_Click"/>
            <MenuItem x:Name="ConfigButton" Header="Cấu hình" Click="ConfigButton_Click"/>
            <MenuItem x:Name="BrokerManagementButton" Header="Broker" Click="BrokerManagementButton_Click"/>
            <MenuItem Header="Quản lý">
                <MenuItem x:Name="CustomerManagementButton" Header="Khách hàng" Click="CustomerManagementButton_Click"/>
                <MenuItem x:Name="SaleManagementButton" Header="Sale" Click="SaleManagementButton_Click"/>
                <MenuItem x:Name="AccountManagementButton" Header="Tài khoản" Click="AccountManagementButton_Click"/>
            </MenuItem>
        </Menu>

        <DataGrid x:Name="SalesDataGrid" HorizontalAlignment="Center" Height="646" Margin="0,60,0,0" VerticalAlignment="Top" Width="1180" FontFamily="Monserrat" FontSize="24" Background="#FFCACACA" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Thời gian quét" Binding="{Binding CreatedDate}" />
                <DataGridTextColumn Header="RFID" Binding="{Binding RFIDCode}"/>
                <DataGridTextColumn Header="Cân nặng" Binding="{Binding Weight}" />
                <DataGridTextColumn Header="Tỉ Trọng" Binding="{Binding Density}" />
                <DataGridTextColumn Header="Tên khách hàng" Binding="{Binding Customer.CustomerName}" />
                <DataGridTemplateColumn Header="Chỉnh sửa">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Width="25" Height="25">
                                <Button.Template>
                                    <ControlTemplate TargetType="{x:Type Button}">
                                        <Grid>
                                            <TextBlock Text="⚙️" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black"/>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="Quit" Content="Quit" HorizontalAlignment="Left" Height="31" Margin="1046,729,0,0" VerticalAlignment="Top" Width="127" Background="#FFCACACA" FontFamily="Monserrat" Foreground="#FF002366" FontSize="24" Click="QuitButton_Click"/>
    </Grid>
</Window>
