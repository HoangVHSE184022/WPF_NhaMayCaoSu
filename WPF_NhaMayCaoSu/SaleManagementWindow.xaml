<Window x:Class="WPF_NhaMayCaoSu.SaleManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Sale Management" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFCACACA" FontFamily="Monserrat" Foreground="#FF002366" FontSize="24">
            <MenuItem x:Name="ShowButton" Header="Hiển thị" Click="ShowButton_Click"/>
            <MenuItem x:Name="ConfigButton" Header="Cấu hình" Click="ConfigButton_Click"/>
            <MenuItem x:Name="BrokerManagementButton" Header="Broker" Click="BrokerManagementButton_Click"/>
            <MenuItem Header="Quản lý">
                <MenuItem x:Name="CustomerManagementButton" Header="Khách hàng" Click="CustomerManagementButton_Click"/>
                <MenuItem x:Name="SaleManagementButton" Header="Sale" Click="SaleManagementButton_Click"/>
                <MenuItem x:Name="AccountManagementButton" Header="Tài khoản" Click="AccountManagementButton_Click"/>
            </MenuItem>
        </Menu>

        <Label x:Name="ModeLabel" Content="Thêm/Chỉnh sửa Sale" HorizontalAlignment="Left" Height="68" Margin="32,31,0,0" VerticalAlignment="Top" Width="494" FontFamily="Monserrat" FontSize="36" Foreground="#FF002366" FontWeight="Bold"/>
        <Label Content="Mã RFID" HorizontalAlignment="Left" Height="46" Margin="32,96,0,0" VerticalAlignment="Top" Width="239" FontFamily="Monserrat" FontSize="30" Foreground="#FF002366"/>
        <TextBox x:Name="RFIDCodeTextBox" HorizontalAlignment="Left" Height="46" Margin="276,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="850" FontFamily="Monserrat" FontSize="30" Background="#FFCACACA" BorderThickness="0"/>
        <Label Content="Số ký" HorizontalAlignment="Left" Height="46" Margin="32,196,0,0" VerticalAlignment="Top" Width="239" FontFamily="Monserrat" FontSize="30" Foreground="#FF002366"/>
        <TextBox x:Name="WeightTextBox" HorizontalAlignment="Left" Height="46" Margin="276,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="850" FontFamily="Monserrat" FontSize="30" Background="#FFCACACA" BorderThickness="0"/>
        <Label Content="URL " HorizontalAlignment="Left" Height="46" Margin="32,296,0,0" VerticalAlignment="Top" Width="239" FontFamily="Monserrat" FontSize="30" Foreground="#FF002366"/>
        <TextBox x:Name="URLWeightTextBox" HorizontalAlignment="Left" Height="46" Margin="276,296,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="850" FontFamily="Monserrat" FontSize="30" Background="#FFCACACA" BorderThickness="0"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Height="68" Margin="966,675,0,0" VerticalAlignment="Top" Width="160" Background="#FF254098" FontFamily="Monserrat" Foreground="#FFFFFF" BorderThickness="0" FontSize="36" Click="SaveButton_Click"/>
        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="68" Margin="72,675,0,0" VerticalAlignment="Top" Width="160" Background="#FFCACACA" FontFamily="Monserrat" Foreground="#FF002366" BorderThickness="0" FontSize="36"  Click="QuitButton_Click"/>
        <Label Content="Trạng thái" HorizontalAlignment="Left" Height="46" Margin="32,596,0,0" VerticalAlignment="Top" Width="239" FontFamily="Monserrat" FontSize="30" Foreground="#FF002366"/>
        <TextBox x:Name="StatusTextBox" HorizontalAlignment="Left" Height="46" Margin="276,596,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="850" FontFamily="Monserrat" FontSize="30" Background="#FFCACACA" BorderThickness="0"/>
        <Label Content="Tỉ trọng" HorizontalAlignment="Left" Height="46" Margin="35,396,0,0" VerticalAlignment="Top" Width="239" FontFamily="Monserrat" FontSize="30" Foreground="#FF002366"/>
        <TextBox x:Name="DensityTextBox" HorizontalAlignment="Left" Height="46" Margin="279,396,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="850" FontFamily="Monserrat" FontSize="30" Background="#FFCACACA" BorderThickness="0"/>
        <Label Content="URL" HorizontalAlignment="Left" Height="46" Margin="32,496,0,0" VerticalAlignment="Top" Width="239" FontFamily="Monserrat" FontSize="30" Foreground="#FF002366"/>
        <TextBox x:Name="URLDensityTextBox" Background="#FFCACACA" HorizontalAlignment="Left" Height="46" Margin="276,496,0,0" TextWrapping="Wrap" VerticalAlignment="Top"  Width="850" FontFamily="Monserrat" FontSize="30" BorderThickness="0"/>

    </Grid>
</Window>
