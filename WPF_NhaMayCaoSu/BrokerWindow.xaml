<Window x:Class="WPF_NhaMayCaoSu.BrokerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Broker Window" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="#e0ffff ">
    <Grid>
        <Label Content="Quản lý broker" HorizontalAlignment="Left" Height="68" Margin="32,31,0,0" VerticalAlignment="Top" Width="642" FontFamily="Arial" FontSize="46" Foreground="#FF002366" FontWeight="Bold"/>
        <Label Content="Server status"  HorizontalAlignment="Left" Height="46" Margin="216,243,0,0" VerticalAlignment="Top" Width="384" FontFamily="Arial" FontSize="30" Foreground="#FF002366"/>
        <Label x:Name="ServerStatusLabel" Content="Offline" HorizontalAlignment="Left" Height="46" Margin="600,243,0,0" VerticalAlignment="Top" Width="340" FontFamily="Arial" FontSize="30" Foreground="#FF002366"/>
        <Label Content="Board connection status" HorizontalAlignment="Left" Height="46" Margin="216,346,0,0" VerticalAlignment="Top"  Width="384" FontFamily="Arial" FontSize="30" Foreground="#FF002366"/>
        <Label x:Name="BoardConnectionStatusLabel" Content="On/Off" HorizontalAlignment="Left" Height="46" Margin="600,346,0,0" VerticalAlignment="Top" Width="340" FontFamily="Arial" FontSize="30" Foreground="#FF002366"/>
        <Button x:Name="QuitButton" Content="QUIT" HorizontalAlignment="Left" Height="68" Margin="62,667,0,0" VerticalAlignment="Top" Width="160" Background="#FF254098" FontFamily="Arial" Foreground="#FFFFFF" BorderThickness="0" FontSize="36" FontWeight="UltraBold" Click="QuitButton_Click"/>
        <Rectangle HorizontalAlignment="Left" Height="108" Margin="42,104,0,0" Stroke="Black" VerticalAlignment="Top" Width="1078" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Height="48" Margin="158,134,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="26" FontWeight="UltraBold" Click="StartBroker_Click"/>
        <Button x:Name="RestartButton" Content="Restart" HorizontalAlignment="Center" Height="48" Margin="0,134,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="26" FontWeight="UltraBold" Click="RestartBroker_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Left" Height="48" Margin="882,134,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#9b111e" BorderThickness="0" FontSize="26" FontWeight="UltraBold" Click="StopBroker_Click"/>
        <ListBox x:Name="ConnectedClientsListBox" HorizontalAlignment="Left" Height="174" Margin="238,416,0,0" VerticalAlignment="Top" Width="702" FontFamily="Arial" FontSize="24" Foreground="#FF002366"/>
    </Grid>
</Window>
