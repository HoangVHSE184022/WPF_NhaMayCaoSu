<Window x:Class="WPF_NhaMayCaoSu.SaleListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Sale List" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFCACACA" FontFamily="Monserrat" Foreground="#FF002366" FontSize="24">
            <MenuItem x:Name="ShowButton" Header="Hiển thị" Click="ShowButton_Click"/>
            <MenuItem x:Name="ConfigButton" Header="Cấu hình" Click="ConfigButton_Click"/>
            <MenuItem x:Name="BrokerManagementButton" Header="Broker" Click="BrokerManagementButton_Click"/>
            <MenuItem Header="Quản lý">
                <MenuItem x:Name="CustomerManagementButton" Header="Khách hàng" Click="CustomerManagementButton_Click"/>
                <MenuItem x:Name="SaleManagementButton" Header="Sale" Click="SaleManagementButton_Click"/>
                <MenuItem x:Name="AccountManagementButton" Header="Tài khoản" Click="AccountManagementButton_Click"/>
            </MenuItem>
        </Menu>

        <Label Content="Quản lý Sale" HorizontalAlignment="Left" Height="46" Margin="27,36,0,0" VerticalAlignment="Top" Width="224" FontFamily="Montserrat" FontSize="36" Foreground="#FF002366" FontWeight="Bold"/>
        <Button x:Name="AddSaleButton" HorizontalAlignment="Left" Height="40" Margin="1044,131,0,0" VerticalAlignment="Top" Width="121" Background="#FFCACACA" FontFamily="Montserrat" Foreground="#FF002366" BorderThickness="0" FontSize="24" Click="AddSaleButton_Click" >
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Thêm mới"/>
        </Button>
        <Button x:Name="EditSaleButton" HorizontalAlignment="Left" Height="40" Margin="1044,199,0,0" VerticalAlignment="Top" Width="121" Background="#FFCACACA" FontFamily="Montserrat" Foreground="#FF002366" BorderThickness="0" FontSize="24" Click="EditSaleButton_Click" >
            <TextBlock  Text="Chỉnh sửa" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button x:Name="QuitButton" Content="QUIT" HorizontalAlignment="Left" Height="40" Margin="1044,706,0,0" VerticalAlignment="Top" Width="121" Background="#FF254098" FontFamily="Montserrat" Foreground="#FFFFFF" BorderThickness="0" FontSize="30" Click="QuitButton_Click"/>
        <DataGrid x:Name="SaleDataGrid" HorizontalAlignment="Left" Height="641" Margin="27,105,0,0" VerticalAlignment="Top" Width="973" FontFamily="Montserrat" FontSize="24" Background="#FFCACACA" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding SaleId}"/>
                <DataGridTextColumn Header="Weight" Width="100" Binding="{Binding ProductWeight}"/>
                <DataGridTextColumn Header="Density" Width="100" Binding="{Binding ProductDensity}"/>
                <DataGridTextColumn Header="Created" Width="100" Binding="{Binding CreatedDate}"/>
                <DataGridTextColumn Header="Status" Width="90" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Edited" Width="90" Binding="{Binding IsEdited}"/>
                <DataGridTextColumn Header="LastEdited" Width="100" Binding="{Binding LastEditedTime}"/>
                <DataGridTextColumn Header="RFIDCode" Width="150" Binding="{Binding RFIDCode}"/>


            </DataGrid.Columns>
        </DataGrid>


    </Grid>
</Window>
