<Window x:Class="WPF_NhaMayCaoSu.SaleListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Sale List" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded" WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="321*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FFCACACA" FontFamily="Monserrat" Foreground="#FF002366" FontSize="16">
            <MenuItem x:Name="ShowButton" Header="Hiển thị" Click="ShowButton_Click"/>
            <MenuItem x:Name="ConfigButton" Header="Cấu hình" Click="ConfigButton_Click"/>
            <MenuItem x:Name="BrokerManagementButton" Header="Broker" Click="BrokerManagementButton_Click"/>
            <MenuItem Header="Quản lý">
                <MenuItem x:Name="CustomerManagementButton" Header="Khách hàng" Click="CustomerManagementButton_Click"/>
                <MenuItem x:Name="RFIDManagementButton" Header="RFID" Click="RFIDManagementButton_Click"/>
                <MenuItem x:Name="SaleManagementButton" Header="Sale" Click="SaleManagementButton_Click"/>
                <MenuItem x:Name="AccountManagementButton" Header="Tài khoản" Click="AccountManagementButton_Click"/>
                <MenuItem x:Name="RoleManagementButton" Header="Vai trò" Click="RoleManagementButton_Click"/>
            </MenuItem>
        </Menu>

        <Label Content="Quản lý Sale" HorizontalAlignment="Left" Height="52" Margin="27,36,0,0" VerticalAlignment="Top" Width="224" FontFamily="Montserrat" FontSize="36" Foreground="#FF002366" FontWeight="Bold"/>
        <Button x:Name="AddSaleButton" Height="40" Margin="0,43,35,0" VerticalAlignment="Top" Background="#FFCACACA" FontFamily="Montserrat" Foreground="#FF002366" BorderThickness="0" FontSize="24" Click="AddSaleButton_Click" Grid.Row="1" HorizontalAlignment="Right" Width="121" >
            <TextBlock TextWrapping="Wrap" TextAlignment="Center" Text="Thêm mới"/>
        </Button>
        <Button x:Name="EditSaleButton" Height="40" Margin="0,111,35,0" VerticalAlignment="Top" Background="#FFCACACA" FontFamily="Montserrat" Foreground="#FF002366" BorderThickness="0" FontSize="24" Click="EditSaleButton_Click" Grid.Row="1" HorizontalAlignment="Right" Width="121" >
            <TextBlock  Text="Chỉnh sửa" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button x:Name="QuitButton" Content="QUIT" Margin="0,0,35,38" Background="#FF254098" FontFamily="Montserrat" Foreground="#FFFFFF" BorderThickness="0" FontSize="30" Click="QuitButton_Click" Grid.Row="1" Grid.RowSpan="2" HorizontalAlignment="Right" Width="121" Height="40" VerticalAlignment="Bottom"/>
        <DataGrid x:Name="SaleDataGrid" Margin="27,17,200,38" FontFamily="Montserrat" FontSize="24" Background="#FFCACACA" AutoGenerateColumns="False" Grid.Row="1" Grid.RowSpan="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding SaleId}"/>
                <DataGridTextColumn Header="Tên khách hàng" Width="200" Binding="{Binding CustomerName}"/>
                <DataGridTextColumn Header="Số ký" Width="100" Binding="{Binding ProductWeight}"/>
                <DataGridTextColumn Header="Tỉ trọng" Width="100" Binding="{Binding ProductDensity}"/>
                <DataGridTextColumn Header="Lần chỉnh sửa cuối" Width="210" Binding="{Binding LastEditedTime}"/>
                <DataGridTextColumn Header="Trạng thái" Width="120" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="Mã RFID" Width="200" Binding="{Binding RFIDCode}"/>



            </DataGrid.Columns>
        </DataGrid>
        <Label x:Name="SearchLabel" Content="Nhập tên khách hàng:" Height="30" VerticalAlignment="Top" Margin="0,69,506,0" FontFamily="Montserrat" FontSize="18" Grid.RowSpan="2" HorizontalAlignment="Right" Width="188" />
        <TextBox x:Name="SearchTextBox" Height="30" VerticalAlignment="Top" Margin="0,70,200,0" FontFamily="Montserrat" FontSize="18" HorizontalAlignment="Right" Width="309" Grid.RowSpan="2"/>
        <Button x:Name="SearchButton" Content="Tìm kiếm" Height="30" VerticalAlignment="Top" Margin="0,70,35,0" FontFamily="Montserrat" FontSize="18" Click="SearchButton_Click" Grid.RowSpan="2" HorizontalAlignment="Right" Width="121"/>

        <Button x:Name="PreviousPageButton" Content="Trước" Margin="421,0,0,22" Click="PreviousPageButton_Click" FontSize="12" Grid.Row="2" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="40"/>
        <TextBlock x:Name="PageNumberTextBlock" Margin="466,0,0,20" TextAlignment="Center" FontFamily="Montserrat" FontSize="12" Grid.Row="2" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="94" />
        <Button x:Name="NextPageButton" Content="Sau" Margin="545,0,0,22" Click="NextPageButton_Click" FontSize="12" Grid.Row="2" Height="16" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="40"/>
    </Grid>
</Window>
