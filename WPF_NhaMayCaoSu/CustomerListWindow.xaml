<Window x:Class="WPF_NhaMayCaoSu.CustomerListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_NhaMayCaoSu"
        mc:Ignorable="d"
        Title="Customer List" Height="800" Width="1200" WindowStartupLocation="CenterScreen" Background="#e0ffff ">
    <Grid>
        <Label Content="Quản lý khách hàng" HorizontalAlignment="Left" Height="68" Margin="32,31,0,0" VerticalAlignment="Top" Width="446" FontFamily="Arial" FontSize="46" Foreground="#FF002366" FontWeight="Bold"/>
        <Rectangle HorizontalAlignment="Left" Height="230" Margin="32,120,0,0" Stroke="Black" VerticalAlignment="Top" Width="200" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <Button HorizontalAlignment="Left" Height="69" Margin="52,149,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" >
            <TextBlock x:Name="AddCustomerButton" Text="Thêm khách hàng" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button HorizontalAlignment="Left" Height="69" Margin="52,249,0,0" VerticalAlignment="Top" Width="160" Background="#F5F5F5" FontFamily="Arial" Foreground="#FF002366" BorderThickness="0" FontSize="24" FontWeight="UltraBold" >
            <TextBlock x:Name="EditCustomerButton" Text="Chỉnh sửa khách hàng" TextWrapping="Wrap" TextAlignment="Center"/>
        </Button>
        <Button x:Name="QuitButton" Content="QUIT" HorizontalAlignment="Left" Height="68" Margin="52,667,0,0" VerticalAlignment="Top" Width="160" Background="#FF254098" FontFamily="Arial" Foreground="#FFFFFF" BorderThickness="0" FontSize="36" FontWeight="UltraBold" Click="QuitButton_Click"/>
        <Rectangle HorizontalAlignment="Left" Height="652" Margin="280,104,0,0" Stroke="Black" VerticalAlignment="Top" Width="884" Fill="#FF002366" RadiusX="30" RadiusY="30"/>
        <DataGrid x:Name="CustomerDataGrid" HorizontalAlignment="Left" Height="606" Margin="310,129,0,0" VerticalAlignment="Top" Width="824" d:ItemsSource="{d:SampleData ItemCount=5}" FontFamily="Arial" FontSize="24"/>


    </Grid>
</Window>
