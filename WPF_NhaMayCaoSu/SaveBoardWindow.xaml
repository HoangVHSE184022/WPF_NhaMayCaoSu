<Window x:Class="WPF_NhaMayCaoSu.SaveBoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Lưu Board" Height="200" Width="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Bạn muốn lưu tên của board này là gì?" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Margin="0,20,0,0"/>
        <ComboBox x:Name="BoardNameComboBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
            <ComboBoxItem Content="Cân Tạ"/>
            <ComboBoxItem Content="Cân Tiểu Ly"/>
        </ComboBox>
        <Button x:Name="ConfirmButton" Content="Lưu" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20" Click="ConfirmButton_Click" />
    </Grid>
</Window>
